<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lixue.aibei.universaladapter"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".RcvTestActivity"
            android:label="@string/title_activity_rcv_test"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ListViewTestActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ViewPagerTestActivity"
            android:label="@string/title_activity_view_pager_test"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
